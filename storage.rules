rules_version = '2';

service firebase.storage {
  // -------------------------------------------------------------------------
  // WRAPPER FOR BUCKET
  // -------------------------------------------------------------------------
  match /b/{bucket}/o {
    
    // -------------------------------------------------------------------------
    // CANONICAL PATH ENFORCEMENT
    // Root: users/{userId}/...
    // -------------------------------------------------------------------------
    match /users/{userId}/{allPaths=**} {
      function isOwner(uid) {
        return request.auth != null && request.auth.uid == uid;
      }
      
      match /posts/{postId}/{mediaId} {
         allow read: if request.auth != null;
         allow write: if isOwner(userId)
                      && request.resource.size < 50 * 1024 * 1024
                      && request.resource.contentType.matches('image/.*|video/.*');
         allow delete: if request.auth != null && request.auth.uid == userId;
      }

      match /reels/{fileName} {
         allow read: if request.auth != null;
         allow write: if isOwner(userId)
                      && request.resource.size < 100 * 1024 * 1024
                      && request.resource.contentType.matches('video/.*');
         allow delete: if request.auth != null && request.auth.uid == userId;
      }
      
      match /profile_photos/{fileName} {
         allow read: if request.auth != null;
         allow write: if isOwner(userId)
                      && request.resource.size < 20 * 1024 * 1024
                      && request.resource.contentType.matches('image/.*');
         allow delete: if request.auth != null && request.auth.uid == userId;
      }
      
      match /{folder}/{fileName} {
         allow read: if request.auth != null; 
         allow write: if isOwner(userId) 
                      && request.resource.size < 20 * 1024 * 1024;
         allow delete: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // -------------------------------------------------------------------------
    // LEGACY PROFILE PHOTOS PATH
    // -------------------------------------------------------------------------
    match /profilePhotos/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 20 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // -------------------------------------------------------------------------
    // STORIES (Root Level) - V1 Migration
    // -------------------------------------------------------------------------
    match /stories/v1/{userId}/{storyId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 50 * 1024 * 1024; 
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // -------------------------------------------------------------------------
    // EXPLICIT DENY ALL OTHER ROOTS
    // -------------------------------------------------------------------------
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
