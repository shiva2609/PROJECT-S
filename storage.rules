rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is superAdmin
    function isSuperAdmin() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.accountType == 'superAdmin';
    }
    
    // Verification documents
    match /verification_docs/{userId}/{requestId}/{fileName} {
      // Allow read if user is owner or superAdmin
      allow read: if isOwner(userId) || isSuperAdmin();
      
      // Allow write (upload) only for own documents
      allow write: if isOwner(userId) &&
                     // Validate file size (10MB max)
                     request.resource.size < 10 * 1024 * 1024 &&
                     // Validate file type
                     request.resource.contentType.matches('image/.*') ||
                     request.resource.contentType == 'application/pdf';
      
      // Allow delete only for own documents or superAdmin
      allow delete: if isOwner(userId) || isSuperAdmin();
    }
    
    // User profile images (legacy path)
    match /profile_images/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) &&
                     request.resource.size < 5 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
      allow delete: if isOwner(userId) || isSuperAdmin();
    }
    
    // Profile photos (new path: profilePhotos/{userId}/{fileName})
    match /profilePhotos/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) &&
                     request.resource.size < 5 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
      allow delete: if isOwner(userId) || isSuperAdmin();
    }
    
    // Posts media (public read, owner write)
    match /users/{userId}/posts/{postId}/{mediaId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 50 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*|video/.*');
      allow delete: if request.auth != null
                    && request.auth.uid == userId;
    }

    // Messages media (participants only)
    match /messages/{conversationId}/{messageId}/{mediaId} {
      // Only conversation participants can read
      allow read: if isAuthenticated() && (
        isSuperAdmin() ||
        // Check if user is participant in conversation
        request.auth.uid in firestore.get(/databases/(default)/documents/conversations/$(conversationId)).data.participants
      );
      
      // Only participants can write
      allow write: if isAuthenticated() && 
                     request.auth.uid in firestore.get(/databases/(default)/documents/conversations/$(conversationId)).data.participants &&
                     // Validate file size (25MB max)
                     request.resource.size < 25 * 1024 * 1024 &&
                     // Validate content type
                     (request.resource.contentType.matches('image/.*|video/.*') ||
                      request.resource.contentType.matches('application/.*'));
      
      // Message sender or super admin can delete
      allow delete: if isAuthenticated() && (
        isSuperAdmin() ||
        firestore.get(/databases/(default)/documents/conversations/$(conversationId)/messages/$(messageId)).data.senderId == request.auth.uid
      );
    }
    
    // Legacy messages path (users/{userId}/chats/{chatId}/messages/{messageId})
    match /users/{userId}/chats/{chatId}/messages/{messageId}/{mediaId} {
      allow read: if isAuthenticated() && (
        isSuperAdmin() ||
        userId == request.auth.uid
      );
      allow write: if isOwner(userId) &&
                     request.resource.size < 25 * 1024 * 1024 &&
                     (request.resource.contentType.matches('image/.*|video/.*') ||
                      request.resource.contentType.matches('application/.*'));
      allow delete: if isOwner(userId) || isSuperAdmin();
    }
    
    // Reels (video content)
    match /reels/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) &&
                     request.resource.size < 100 * 1024 * 1024 && // 100MB for reels
                     request.resource.contentType.matches('video/.*');
      allow delete: if isOwner(userId) || isSuperAdmin();
    }

    // Role-specific galleries
    match /stayPhotos/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) &&
                     request.resource.size < 10 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
      allow delete: if isOwner(userId) || isSuperAdmin();
    }

    match /previousEventGallery/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) &&
                     request.resource.size < 10 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
      allow delete: if isOwner(userId) || isSuperAdmin();
    }

    match /courseGallery/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) &&
                     request.resource.size < 10 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
      allow delete: if isOwner(userId) || isSuperAdmin();
    }

    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

