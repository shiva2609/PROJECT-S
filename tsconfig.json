{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/services/*": ["src/services/*"],
      "@/screens/*": ["src/screens/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/utils/*": ["src/utils/*"],
      "@/theme/*": ["src/theme/*"],
      "@/store/*": ["src/store/*"],
      "@/app/*": ["src/app/*"],
      "@/types/*": ["src/types/*"],
      "@/assets/*": ["src/assets/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "types": ["node", "react", "react-native"],
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["ES6", "DOM", "ESNext"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "__tests__/**/*", "*.ts", "*.tsx"],
  "exclude": [
    "**/node_modules",
    "**/Pods",
    "__tests__",
    "src/__tests__",
    "functions",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
