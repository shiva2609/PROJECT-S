rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    // Helper function to check if user is superAdmin
    function isSuperAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accountType == 'superAdmin';
    }
    
    // Users collection
    match /users/{uid} {
      // Allow read if user is authenticated
      allow read: if isAuthenticated();
      
      // Allow create for new users (signup)
      allow create: if isAuthenticated() && 
                      request.auth.uid == uid &&
                      !('accountType' in request.resource.data) ||
                      request.resource.data.accountType == 'Traveler';
      
      // Allow update for own profile, but protect accountType
      allow update: if isOwner(uid) && 
                      // Prevent direct accountType changes from client
                      (!('accountType' in request.resource.data) ||
                       request.resource.data.accountType == resource.data.accountType) &&
                      // Allow pendingAccountChange updates
                      ('pendingAccountChange' in request.resource.data ||
                       // Allow other profile fields
                       !('accountType' in request.resource.data));
      
      // Only superAdmin or Cloud Functions can update accountType
      allow update: if isSuperAdmin() ||
                      // Allow Cloud Function updates (via service account)
                      request.auth.token.firebase.sign_in_provider == 'custom';
      
      // Deny delete
      allow delete: if false;
    }
    
    // Upgrade requests collection
    match /upgrade_requests/{requestId} {
      // Allow read if user is owner or superAdmin
      allow read: if isAuthenticated() && 
                    (resource.data.uid == request.auth.uid || isSuperAdmin());
      
      // Allow create only for own requests
      allow create: if isAuthenticated() && 
                      request.resource.data.uid == request.auth.uid &&
                      request.resource.data.status == 'pending' &&
                      'requestId' in request.resource.data &&
                      'fromRole' in request.resource.data &&
                      'toRole' in request.resource.data &&
                      'createdAt' in request.resource.data;
      
      // Only superAdmin can update status
      allow update: if isSuperAdmin() &&
                      // Only allow status changes
                      ('status' in request.resource.data) &&
                      (request.resource.data.status == 'approved' ||
                       request.resource.data.status == 'rejected') &&
                      // Allow adding review fields
                      ('reviewedBy' in request.resource.data ||
                       'reviewedAt' in request.resource.data ||
                       'adminComment' in request.resource.data);
      
      // Deny delete
      allow delete: if false;
    }
    
    // Roles metadata collection (read-only for authenticated users)
    match /roles_metadata/{role} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }
    
    // Deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

